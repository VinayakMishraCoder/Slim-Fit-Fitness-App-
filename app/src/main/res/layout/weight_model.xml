<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="4dp"
    android:layout_margin="4dp"
    android:background="#263238"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/user_photo"
        android:layout_width="104dp"
        android:layout_height="85dp"
        android:layout_marginEnd="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8"
        app:srcCompat="@drawable/fitness" />

    <TextView
        android:id="@+id/weight_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:text="N/A"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/user_photo"
        app:layout_constraintEnd_toStartOf="@+id/user_photo"
        app:layout_constraintTop_toTopOf="@+id/user_photo"
        app:layout_constraintVertical_bias="0.492" />

    <TextView
        android:id="@+id/date_view"
        android:layout_width="120dp"
        android:layout_height="37dp"
        android:layout_marginEnd="14dp"
        android:gravity="center"
        android:text="Today"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/weight_view"
        app:layout_constraintEnd_toStartOf="@+id/weight_view"
        app:layout_constraintHorizontal_bias="0.636"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/weight_view"
        app:layout_constraintVertical_bias="0.533" />

</androidx.constraintlayout.widget.ConstraintLayout>